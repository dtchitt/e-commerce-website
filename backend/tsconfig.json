{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"lib": ["esnext"],
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
